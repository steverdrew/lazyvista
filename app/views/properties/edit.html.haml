- content_for :javascript_includes do
  = javascript_include_tag "properties/edit_form.js"
  = javascript_include_tag "properties/general.js"
  
#overlay
#preloader
  #status
.row
  .small-12.large-12.columns
    %p
      %a{name: "general"}
    %br/
    %h4.subheader.magellan-menu{"data-magellan-destination"=>"general"} General
    %h6.subheader= 'Snazzy stuff goes here.'
.row
  #screen
    .small-3.large-3.columns
      #promo_image
        = render "promo_image" 
    .small-9.large-9.columns
      #general
        = render "general"
.row
  #screen
    .small-12.large-12.columns
      %p
        %a{name: "location"}
      %br/
      %h4.subheader.magellan-menu{"data-magellan-destination"=>"location"} Location
      %h6.subheader= 'Specify the approximate location'
      #location
        = render "location"
.row
  #screen
    .small-12.large-12.columns
      %p
        %a{name: "assets"}
      %br/  
      %h4.subheader.magellan-menu{"data-magellan-destination"=>"assets"} Media &amp; Docs
      %h6.subheader= 'Upload photos, videos and documents for this property. Optionally make them private.'
      %br
      .row
        .large-4.columns
          #create_asset
            .panel
              = render "property_assets/create_asset"
        .large-8.columns
          #assets
            = render "property_assets/assets"    
.row
  #screen
    .small-12.large-12.columns
      %p
        %a{name: "features"}
      %br/  
      %h4.subheader.magellan-menu{"data-magellan-destination"=>"features"} Features
      %h6.subheader= 'Select the features relevant for this property'
      = render "features"
        
.row
  #screen
    .small-12.large-12.columns
      %p
        %a{name: "descriptions"}
      %br/  
      %h4.subheader.magellan-menu{"data-magellan-destination"=>"descriptions"} Descriptions
      %h6.subheader= 'Provide more detailed information'
      = render "descriptions"