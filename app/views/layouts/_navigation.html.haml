%nav.top-bar(data-topbar)
  %ul.title-area
    %li.name
      %h1
        = link_to 'Home', root_path
    %li.toggle-topbar.menu-icon
      %a{:href => '#'} 
        %span Menu
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.divider
        %li.main-nav{id: "properties-nav"}
          = link_to "Properties", edit_user_registration_path
        %li.divider
        %li.main-nav{id: "bookings-nav"}
          = link_to "My Bookings", edit_user_registration_path
        %li.divider
        %li.main-nav{id: "account-nav"}
          = link_to "Account", edit_user_registration_path
        %li.divider
       
        %li.has-form
          = link_to "Logout", destroy_user_session_path, :method => :delete, class: "button small"
       
      - else 
        %li
          = link_to "Sign up", new_user_registration_path 
        %li
          = link_to 'Login',new_user_session_path

