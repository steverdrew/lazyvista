%nav.top-bar(data-topbar)
  %ul.title-area
    %li.name
      %h1
        = link_to 'Home', root_path
    %li.toggle-topbar.menu-icon
      %a{:href => '#'} 
        %span Menu
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.divider
        %li.top-nav.has-dropdown{id: "nav1"}
          = link_to properties_path do
            %i.fa.fa-home
            Properties
          %ul.dropdown
            %li
              = link_to "Add", new_property_path
            %li
              = link_to "Stats", new_property_path
        %li.top-nav{id: "nav2"}
          = link_to "Bookings"
        %li.divider
        %li.top-nav{id: "nav4"}
          = link_to edit_user_registration_path do
            %i.fa.fa-search
            Search 
        %li.divider
        %li.top-nav{id: "nav3"}
          = link_to edit_user_registration_path do
            %i.fa.fa-cogs
        %li.divider
        %li
          = link_to destroy_user_session_path, :method => :delete do
            %i.fa.fa-sign-out
      - else 
        %li.top-nav{id: "nav4"}
          = link_to "Sign up", new_user_registration_path 
        %li.top-nav{id: "nav5"}
          = link_to 'Login',new_user_session_path