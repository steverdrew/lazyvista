= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:data => {:abide => ''}, method: :put }, remote: true) do |f|
  .row
    .large-12.columns
      = devise_error_messages!
  .row
    .large-4.columns
      = f.text_field :name, id: 'name', placeholder: 'Your name', :required => ''
      %small.error Name is required
    .large-2.columns
      = f.submit "Update", :class => 'button small round', disabled: '', id: 'email_submit_button'
    .large-6.columns
      &nbsp;