.row
  .small-2.large-2.columns
    %ul.side-nav.menu-nav
      %li.menu-nav-tab.active{id: "general-tab"}
        %a{href: "#"} General
      %li.menu-nav-tab{id: "picture-tab"}
        %a{href: "#"} Profile Picture
      %li.menu-nav-tab{id: "password-tab"}
        %a{href: "#"} Change Password
      %li.menu-nav-tab{id: "delete-tab"}
        %a{href: "#"} Delete Account
  .small-10.large-10.columns
    #p.panel
      .main-content
        #general 
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :multipart => true, method: :put }) do |f|
            .row
              .large-12.columns
                = devise_error_messages!
              .row
                .large-12.columns
                  = f.label 'Update email'
                  = f.email_field :email, autofocus: true
              .row
                .large-12.columns
                  = f.label :current_password
                  %i (we need your current password to confirm your changes)
                  = f.password_field :current_password, autocomplete: "off"
              .row
                .large-12.columns
                  = f.submit "Update", :class => 'button tiny'
        
        #picture{style: "display:none;"}
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :multipart => true, method: :put }) do |f|
            .row
              .large-12.columns
                = f.file_field :avatar        
            .row
              .large-4.columns
                = image_tag @user.avatar.url(:medium)
              .large-8.columns
                = f.submit "Update", :class => 'button tiny'
        
        
        #password{style: "display:none;"}
        
        
        #delete{style: "display:none;"}
