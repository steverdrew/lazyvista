= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:data => {:abide => ''}, method: :put }, remote: true) do |f|
  .row
    .large-12.columns
      %h4= 'Update email'
  .row
    .large-12.columns
      = devise_error_messages!
  .row
    .large-6.columns
      = f.email_field :email, id: 'email', placeholder: 'New email', :required => '', type: "email"
      %small.error Valid email is required
  .row
    .large-6.columns
      = f.password_field :current_password, autocomplete: "off", :required => '', placeholder: 'Current password', id: 'password'
      %small.error Password required
  .row
    .large-6.columns
      = f.submit "Update", :class => 'button small right round', disabled: '', id: 'email_submit_button'